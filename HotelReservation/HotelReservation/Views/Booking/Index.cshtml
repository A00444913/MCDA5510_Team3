@TempData["x"]
@model HotelReservation.Models.Bookings1

@{
    ViewData["Title"] = "Booking Room";
}
<style>
    body {
        align-content: center;
        align-items: center;
        text-align: center;
    }
</style>

<div class="findroom">
    <div class="container-fluid">
        <img src="~/images/logo.png" width="200" />
        <h1>@ViewData["Title"]</h1>



        <form class="form-group" asp-controller="Booking" asp-action="SearchRoom" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="col-2">From Date</label>
            <input name="From" type="date" class="col-3" asp-for="StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
            <p>to</p>
            <input name="To" type="date" style="width:400px" class="end_date" asp-for="EndDate" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
            <br />

            <p style="font-size:25px">Location</p>
            <select name="city" style="width:400px">
                <option value="Toronto">Toronto</option>
                <option value="New York">New york</option>
                <option value="Halifax">Halifax</option>
            </select>


            <p style="font-size:25px">Rooms</p>
            <input name="room" type="number" style="width:400px" class="room_number" placeholder="Number of rooms" min="1" />
            <p style="font-size:25px">Guests</p>
            <label asp-for="GuestCount"></label>
            <input name="guest" type="number" style="width:400px" class="guest_number" placeholder="Number of guests" min="1" asp-for="GuestCount" />
            <span asp-validation-for="GuestCount" class="text-danger"></span>

            <p>type of room</p>
            <select name="type">
                <option value="king">king size</option>
                <option value="Queen">queen size</option>
            </select>
            <input type="submit" style="width:400px;color:white;background-color:rebeccapurple; font-size:20px" />
            <br />
            @if ((string)TempData["DateError"] != "")
            {
                <p style="color:red">@TempData["DateError"]</p>
            }
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}